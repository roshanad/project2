<button class="new"> <%= link_to "Add Listing", new_post_path %></button>
<div id="posts_show">
  <h1 class= "title"><%= @post.title %></h1>
  <p class="date">Submitted <%=time_ago_in_words(@post.created_at) %>  Ago</p>
  <p class="body"><%= @post.body %></p>
  <% if user_signed_in? %>
  <%= link_to "Edit", edit_post_path(@post) %>
  | <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
  <% end %>
</div>

<div id= "comments">
  <div class="comment">
    <h2 class="title"><%= @post.comments.count %> Comments</h2>
    <p class="body"><%= render @post.comments %></p>
  </div>
  <h3>Leave a Reply </h3>
  <%= render "comments/form" %>
</div>
